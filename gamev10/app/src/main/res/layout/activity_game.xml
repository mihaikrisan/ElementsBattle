<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Horizontal ScrollView Example"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/card2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/cardback" />

                <ImageView
                    android:id="@+id/card3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/cardback" />

                <ImageView
                    android:id="@+id/card4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/cardback" />

                <ImageView
                    android:id="@+id/card5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/cardback" />

                <ImageView
                    android:id="@+id/card6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/cardback" />


            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <ImageView
        android:id="@+id/activeComputerCard"
        android:layout_width="185dp"
        android:layout_height="201dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
         />

    <ImageView
        android:id="@+id/activePlayerCard"
        android:layout_width="185dp"
        android:layout_height="201dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="375dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Horizontal ScrollView Example"
        android:id="@+id/textViewlower"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="700dp"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="330dp"
        android:gravity="center"
        android:text="Time:"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/scoreComputer"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="471dp"
        android:gravity="center"
        android:text="0"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/scorePlayer"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="450dp"
        android:gravity="center"
        android:text="0"
        android:textSize="50sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="600dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/horizontalScrollViewlower">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/lowercard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
                <ImageView
                    android:id="@+id/lowercard4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
                <ImageView
                    android:id="@+id/lowercard5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
                <ImageView
                    android:id="@+id/lowercard6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
                <ImageView
                    android:id="@+id/lowercard7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
</RelativeLayout>